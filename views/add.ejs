<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="icon" type="image/x-icon" href="/ejs.svg">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Add</h1>
  
  <%- include('partials/link.ejs'); %>
  <%- include('partials/errors.ejs'); %>

  <div class="center">
  <form action="/add" method="post">

  <div class="input-container">
  <label for="itemName">Item Name</label>
  <input type="text" name="itemName" id="itemName"> 
  </div>

  <div class="input-container">
  <label for="itemDescription">Item Description</label> 
  <textarea name="itemDescription" id="itemDescription" rows="4" cols="50" style="max-width:100%;"></textarea> 
  </div>

  <div class="input-container">
  <label for="itemQuantity">Item Quantity</label> 
  <input type="number" name="itemQuantity" id="itemQuantity"> 
  </div>

  <button type="submit" class="btn">Add Item</button>

  </form>
  </div>

</body>
</html>